# Blockchain Configuration
# Private key of the fee payer account (must be a valid Ethereum private key)
FEE_PAYER_PRIVATE_KEY=

# Address of the fee payer account (must be a valid Ethereum address)
ACCOUNT_ADDRESS=

# Comma Separated RPC URL for the blockchain network
RPC_URL=https://public-en-kairos.node.kaia.io

# API Configuration
# Public URL of your API (used for client-side requests)
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Authentication Configuration
# Google OAuth Client ID from Google Cloud Console
GOOGLE_CLIENT_ID=

# Google OAuth Client Secret from Google Cloud Console
GOOGLE_CLIENT_SECRET=

# NextAuth.js Configuration
# Base URL of your application
NEXTAUTH_URL=http://localhost:3000

# Secret key for NextAuth.js (generate using: openssl rand -base64 32)
NEXTAUTH_SECRET=

# Comma-separated list of allowed Google email addresses
# Only these emails will be granted editor access
GOOGLE_WHITELIST=example@domain.com,

# Optional: Pool Balance Warning Thresholds
# These values determine when to show warning indicators for pool balance
# Values are in the native token (e.g., KAIA)
NEXT_PUBLIC_POOL_WARNING_RED=10
NEXT_PUBLIC_POOL_WARNING_ORANGE=20

# mysql database url string . Configure below variable in .env file
DATABASE_URL=mysql://

# Password hashing
BCRYPT_ROUNDS=12

# JWT Secret for email authentication (your custom system)
EMAIL_AUTH_JWT_SECRET=Kaia

# Password reset token expiration (in minutes)
PASSWORD_RESET_EXPIRATION=1440

NEXT_PUBLIC_RECAPTCHA_SITE_KEY=
RECAPTCHA_SECRET_KEY=

# AWS SES Configuration (for email alerts)
AWS_REGION="ap-southeast-1"  
FROM_EMAIL="noreply@yourdomain.com" 
# For local testing
AWS_ACCESS_KEY_ID="your-aws-access-key-id" 
AWS_SECRET_ACCESS_KEY="your-aws-secret-access-key"

# URL of base URL
NEXT_PUBLIC_BASE_URL=
